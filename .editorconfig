# EditorConfig: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript/JavaScript/JSON
[*.{ts,tsx,js,jsx,json}]
indent_size = 2
quote_type = single  # (если ESLint/Prettier настроены на single quotes)

# Markdown (отключаем trim для корректных переносов строк)
[*.md]
trim_trailing_whitespace = false

# YAML (обычно 2 пробела)
[*.{yml,yaml}]
indent_size = 2

# Bash/Shell scripts (используем табы)
[*.sh]
indent_style = tab